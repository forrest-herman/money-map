        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "../",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["src/**/*", "../shared"]
}
